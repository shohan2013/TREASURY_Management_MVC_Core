<script src="~/customjs/treasury/treasuryreport.js"></script>
<link href="~/customcss/print.css" rel="stylesheet" />
<style>
    #print > th > td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .tag-container {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        /*  border: 1px solid #ccc; */
        padding: 5px;
    }

    .rocket {
        width: 500px;
        /* border: 1px solid #ccc; */
        font-weight: bold;
        padding: 0px;
        overflow-wrap: break-word; /* Ensure words wrap */
    }

</style>
<br />
<br />
<br />

<div class="row" ng-app="App" ng-controller="Ctl" ng-init="GetUnit()">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Interest Amt</h4>
                </div>
                <div class="card-body">

                    <form>
                        <div class="row">

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label>Lender Unit :</label>
                                    <select class="form-select" ng-model="lenderunitid" ng-init="GetUnit()"
                                            id="lenderunitid">
                                        <option value="">--Select--</option>
                                        <option ng-repeat="list in unitlist" value="{{list.id}}">
                                            {{list.name}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="formrow-password-input" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="startdate" ng-model="startdate">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="formrow-password-input" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="enddate" ng-model="enddate">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-6">
                                    <button style="margin-top:28px;" type="submit" class="btn btn-primary w-md" ng-click="GetData()"><span class="fas fa-search-plus"></span> Submit</button>
                                    <button type="button" style="background-color:rgb(240, 243, 255);margin-top:28px;" class="btn btn-primary w-md" data-bs-toggle="modal" data-bs-target="#exampleModalFullscreen" ng-click="Print()">
                                        <span class="fas fa-print "></span> Print
                                    </button>
                                </div>
                               
                            </div>


                        </div>
                    </form>


                    <div id="exampleModalFullscreen" class="modal fade" tabindex="-1" aria-labelledby="exampleModalFullscreenLabel" aria-hidden="true">
                        <div class="modal-dialog modal-fullscreen">
                            <div class="modal-content">
                                <div class="modal-header">
                                    @* <button type="button" class="btn btn-soft-primary btn-sm print" ng-click="PrintDoc()"><i class="fas fa-times-circle"></i></button>  *@
                                    <button type="button" class="btn btn-primary w-md" data-bs-toggle="modal" ng-click="PrintDoc()">
                                        <span class="fas fa-print "></span>
                                    </button>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" id="printThis">
                                    <form class="needs-validation" novalidate>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <pre style="font-size:16px;font-weight:bolder;text-align:center">
                                                    {{lenderunit}}
                                                    Simpletree Lighthouse Plot 53, Road 21,Block B Kemal Ataturk Avenue Banani,Dhaka 1213 Bangladesh 
                                                <p style="font-size:18px;font-weight:bolder;margin-left:200px">Interest Calculation Report</p>
                                                </pre>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <table id="print" style="width:100%;font-size:12px">
                                                    <tr style="background-color:black">
                                                        <th style="display:none;">ID</th>
                                                        <th style="color:white">Sl No</th>

                                                        <th style="color:white">
                                                            Borrower Unit
                                                            <span ng-show="sortColumn=='borrowerunit'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                                                        </th>
                                                        <th style="color:rgb(252, 176, 64);display:none">
                                                            Amount
                                                            <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                                                        </th>
                                                        <th style="color:rgb(252, 176, 64)">
                                                            Amount
                                                            <span ng-show="sortColumn=='vamount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                                                        </th>
                                                        <th  style="color:rgb(252, 176, 64);display:none">
                                                            Interest Amount
                                                            <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                                                        </th>
                                                        <th style="color:rgb(252, 176, 64)">
                                                            Interest Amount
                                                            <span ng-show="sortColumn=='vamount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                                                        </th>
                                                    </tr>
                                                    <tr ng-repeat="list in list">
                                                        <td style="display:none;">{{list.id}}</td>
                                                        <td>{{$index+1}}</td>
                                                        <td>{{list.borrowerunit}}</td>
                                                        <td style="background-color:rgb(240, 243, 255);display:none">{{list.amount}}</td>
                                                        <td style="background-color:rgb(240, 243, 255);font-weight:bold">{{list.vamount}}</td>
                                                        <td style="background-color:rgb(240, 243, 255);display:none">{{list.interestamt}}</td>
                                                        <td style="background-color:rgb(240, 243, 255);font-weight:bold">{{list.vinterestamt}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td></td>
                                                        <td style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64)">Total :</td>
                                                        <td><div style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64)">{{GTotal | number}}</div></td>
                                                        <td><div style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64)">{{GITotal | number}}</div></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->
        </div>
    </div>
    

    <div class="row table-responsive">
        <div class="col-sm-12">
            <table id="tblinfo" class="table table-responsive" ng-if="!loading">
                <tr>
                    <th style="display:none;">ID</th>
                    <th>Sl No</th>
                  
                    <th ng-click='sortBy("borrowerunit")'>
                        Borrower Unit
                        <span ng-show="sortColumn=='borrowerunit'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                    </th>
                    <th ng-click='sortBy("amount")' style="color:rgb(252, 176, 64);display:none">
                        Amount
                        <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                    </th>
                    <th ng-click='sortBy("amount")' style="color:rgb(252, 176, 64);display:none">
                        Interest Amount
                        <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                    </th>

                    <th ng-click='sortBy("amount")' style="color:rgb(252, 176, 64)">
                        Amount
                        <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                    </th>
                    <th ng-click='sortBy("amount")' style="color:rgb(252, 176, 64)">
                        Interest Amount
                        <span ng-show="sortColumn=='amount'" ng-class="{'fa fa-angle-double-down' : !reverse, 'fa fa-angle-double-up' : reverse}"></span>
                    </th>
                </tr>
                <tr dir-paginate="list in list | orderBy: sortColumn : reverse | filter:search | itemsPerPage:8">

                    <td style="display:none;">{{list.id}}</td>
                    <td>{{$index+1}}</td>
                    <td>{{list.borrowerunit}}</td>
                    <td style="background-color:rgb(240, 243, 255);display:none">{{list.amount}}</td>
                    <td style="background-color:rgb(240, 243, 255);display:none">{{list.interestamt}}</td>
                    <td style="background-color:rgb(240, 243, 255);font-weight:bold">{{list.vamount}}</td>
                    <td style="background-color:rgb(240, 243, 255);font-weight:bold">{{list.vinterestamt}}</td>
                </tr>
                <tr>
                    <td></td>
                    <td style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64)">Total :</td>
                    <td><div style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64);font-weight:bold">{{GTotal | number}}</div></td>
                    <td><div style="font-weight:bolder;font-style:italic;color:rgb(252, 176, 64);font-weight:bold">{{GITotal | number}}</div></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-6">
            <dir-pagination-controls max-size="10" style="font-size:16px;"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>

        </div>
        <div class="col-sm-2">
        </div>
    </div>

    
      
</div>
